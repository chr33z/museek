<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>
    
     <!-- ActionBar styles -->
    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:textColor">@color/graph_node_maroon</item>
        <item name="android:background">@drawable/actionbar_background</item>
    </style>
    
    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
    	<item name="android:button">@drawable/btn_radio_holo_light</item>
	</style>

</resources>